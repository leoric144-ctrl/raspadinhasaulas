{
  "name": "raspagreen/app",
  "description": "Raspa Green site - PHP + Heroku Postgres",
  "type": "project",
  "require": {
    "php": "^8.1",
    "ext-pdo": "*",
    "ext-pgsql": "*",
    "vlucas/phpdotenv": "^5.6" 
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    },
    "files": [
      "db.php"
    ]
  },
  "scripts": {
    "post-install-cmd": [
      "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  }
}
